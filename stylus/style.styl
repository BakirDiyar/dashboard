@import url('https://fonts.googleapis.com/css?family=Lato:300|Source+Sans+Pro:300');
@import 'struct.styl'


body
	background-color #2b2d3c
	font-family  'Source Sans Pro', sans-serif
	font-weight 300
	
a
	color #5e6484


//containers
	
.wrp-content
	width 100%
	margin-top 100px
	text-align center

.rw
	background-color #2f3242
	box-shadow 0 0 20px 0px #272937
	padding 10px
	margin-bottom 25px


.rw-login
	text-align center
	margin-top  25vh
	width auto 
	background none
	box-shadow none
	

.cl-wide
	position relative
	width 100%


.cl-center
	margin 0 auto
	text-align center
	



.cl-login
	background-color #2b2d3c
	border-radius 8px
	box-shadow 0 0 20px 9px #272937


// .cl-main-menu
// 	margin 0


//tittles

	
.title
	color #fff
	font-family 'Lato', sans-serif
	font-weight 100




// menus vertical and horizontal


.btn-menu
	position fixed
	float left
	z-index 7
	left 15px
	

.head-menu
	background-color #2f3242
	position fixed
	top 0
	z-index 6
	width 100%
	box-shadow 0px 0px 20px 0 #272937
	
	
.vert-menu
	background-color #2f3242
	top 70px
	box-shadow -10px 20px 18px 14px #272937
	
	
.vert-right
	position absolute
	float right 
	z-index 5
	right 15px
	
.data-user
	right 0px
	left initial
	box-shadow 0px 0px 20px 0 #272937
	

	
.btn-data
	display block
	width 20px
	left initial
	right 36px
	top 70px



.wrp-img-user
	margin 0 auto
	margin-top 35px
	width 110px
	height 110px
	overflow hidden
	border-radius 50%	
	margin-bottom 15px



.name-user
	margin-bottom 10px
	color #fff
	font-weight bold
	

.email-user, .rol-user
	font-size 15px
	margin-bottom 12px
	

.btn-perfil
	background-color #3a3e52
	padding 5px 10px
	border 1px solid #0084b4
	border-radius 10px
	

// .sub-menu	
// 	display none
	


// menus index

.main-menu
	padding 50px 10px 50px 10px  
	box-shadow -8px 4px 20px 0px #272937




//form dashboard

.form-dashboard .form-group
	border-left 3px solid #0e6a61
	

.form-dashboard .form-group, .form-dashboard .form-inp
	background-color #3a3e52
	text-align center


.form-dashboard .form-group:last-child
	background none
	border-left none

.form-btn
	background-color #0084b6
	color #fff
	margin-top 15px



	
// form login

.form-login .form-group
	margin-top 20px
	

.form-login .form-group:first-child
	padding-top 20px
	

.form-login .form-inp
	width 80%
	color #fff
	border-bottom 1px solid  #4e5162
	background-color #2b2d3c




// table dashboard


tbody tr, thead tr
	background-color #3a3e52
	border-bottom 10px solid #23242f
	border-left 3px solid #1d6554



//medias mobil first

@media screen and (min-width 530px)
	.cl-login
		width 75%


@media screen and (min-width 768px)
	.wrp-content
		width 85%
		float right
	

	.cl-login
		width 45%

	.form-dashboard .form-group
		display inline-block
		vertical-align top
		border-left none
		margin -2px
		width 25%
	

	.form-dashboard .form-group:first-child
		border-left 3px solid #0e6a61
		
	.form-dashboard .form-group .form-btn
		margin-top 0
	
	thead tr
		background none
		border-bottom none
		border-left none


@media screen and (min-width 910px)
	.cl-login
		width 35%
		


@media screen and (min-width 1068px)
	.wrp-content
		width 85%
		float right
	